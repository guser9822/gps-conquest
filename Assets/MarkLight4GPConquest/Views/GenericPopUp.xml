<GenericPopUp xmlns="MarkLight">
  <Window Id="GenericWindow" Title="Infomation" Width="350px" Height="250px" CloseButtonIsActive="false">
      <Group>
        <Group Id="UserDataGroup" Spacing="8px" Orientation	="Vertical">
          <Label Style="ShowcaseDescription" AdjustToText="WidthAndHeight"
                 TextAlignment="Left" Text="{GenericPopUpMessage}" />
          <Group>
            <Group Id="ButtonsGroup" Spacing="8px" Orientation	="Horizontal">
              <Button Id="OkButton" Text="Ok"></Button>
              <Button Id="CancelButton" Text="Cancel"></Button>
            </Group>
          </Group>
        </Group>
      </Group>
  </Window>
</GenericPopUp>